mixin addCss(items) 
    each item in items 
        link(rel="stylesheet",href=item)
mixin addScripts(items) 
    each item in items 
        script(type="text/javascript",src=item)
mixin addLoadableItem(item)
  if item.props.type == "application/json" 
    script(type=item.props.type,id=item.props.id) !{item.props.dangerouslySetInnerHTML}
  else
    script(async,"data-chunk"=item["data-chunk"],src=item.src)

